<Page
    x:Class="MoneyNote.SeeHistory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyNote"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background= "{StaticResource standardBrush}">


    <Grid>

        <TextBlock TextWrapping="Wrap" 
                   Text="{StaticResource AppName}" 
                   HorizontalAlignment="Center" 
                   Margin="0,39,0,0" 
                   FontSize="40" 
                   FontFamily="{StaticResource MainFont}"
                   FontWeight="Bold"
                   VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" 
                   Margin="37,120,0,0" 
                   TextWrapping="Wrap" 
                   Text="- History" 
                   VerticalAlignment="Top" 
                   FontSize="24" 
                   FontFamily="{StaticResource MainFont}"
                   FontWeight="Bold"/>

        <Grid x:Name="main_grid" 
              Margin="37,170,37,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>

            <Border 
                Background="White" >


                <StackPanel Orientation="Horizontal">

                    <Button x:ConnectionId='5'    x:Name="sortDate"    
                               Content="Date" 
                               FontFamily="{StaticResource MainFont}"
                               FontWeight="Bold"
                               Foreground="#FF06A2E5" 
                               FontSize="16" 
                               HorizontalAlignment="Left" 
                                                      Height="57" Margin="0,-18,0,-20"/>

                    <Button x:ConnectionId='6'    x:Name="sortDescription"    
                               Content="Description"
                               FontFamily="{StaticResource MainFont}"
                               FontWeight="Bold"
                               Foreground="#FF06A2E5" 
                               FontSize="16" 
                               HorizontalAlignment="Center" 
                                                              />

                    <Button x:ConnectionId='7'    x:Name="sortValue"    
                               Content="Value" 
                               FontFamily="{StaticResource MainFont}"
                               FontWeight="Bold"
                               Foreground="#FF06A2E5" 
                               FontSize="16" 
                               HorizontalAlignment="Right" 
                                                        />

                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1">

                <ListView x:ConnectionId='4' ItemsSource="{Binding}"
                          SelectionMode="None"
                          IsItemClickEnabled="True"
                                                        
                          Grid.Row="1">

                    <ListView.ItemTemplate>

                        <DataTemplate>

                            <!--try to solve-->
                            <Grid Width ="350" 
                                  VerticalAlignment="Center" 
                                  Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="110"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding date}" 
                                           FontFamily="{StaticResource MainFont}"
                                           FontWeight="Bold"
                                           FontSize="14" 
                                           TextWrapping="NoWrap" 
                                           TextTrimming="WordEllipsis"/>

                                <TextBlock Text="{Binding Description}" 
                                           FontFamily="{StaticResource MainFont}"
                                           FontWeight="Bold"
                                           FontSize="14" 
                                           TextWrapping="NoWrap" 
                                           TextTrimming="WordEllipsis"
                                           Grid.Column="1" />

                                <TextBlock Text="{Binding Value}" 
                                           FontFamily="{StaticResource MainFont}"
                                           FontWeight="Bold"
                                           FontSize="14" 
                                           TextWrapping="NoWrap" 
                                           TextTrimming="WordEllipsis"
                                           Grid.Column="2" />
                            </Grid>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>

            <Button x:ConnectionId='1' Content="Cancel" 
        			Grid.Row="3"
        			HorizontalAlignment="Left"
        			                    
                    FontFamily="{StaticResource MainFont}"
                    FontWeight="Bold"
                    Margin="0,20,0,0" 
                    Padding="9.5,3.5" 
                    VerticalAlignment="Top"/>

            <TextBlock HorizontalAlignment="Right" 
                       TextWrapping="Wrap" 
                       Text="Filter Tag" 
                       VerticalAlignment="Top" 
                       FontSize="16" 
                       FontFamily="{StaticResource MainFont}"
                       Grid.Row="3" 
                       Margin="0,17,94,0" 
                       FontWeight="Bold"/>

            <Border Background="White" 
                    HorizontalAlignment="Right" 
                    Width="164"
                    Grid.Row="3" 
                    Margin="0,36,0,15">

                <StackPanel Orientation="Horizontal">
                    <TextBox x:ConnectionId='2' x:Name="Filter" 
                             TextAlignment="Right"
                             TextWrapping="Wrap" 
                             VerticalAlignment="Stretch" 
                             Foreground="#FF06A2E5" 
                             Margin="5,2.5,5,2.5" 
                             Width="106" 
                                                        
                                                 />

                    <ToggleButton x:ConnectionId='3' x:Name="filter" 
                                  Content="🔎" 
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center" 
                                  IsChecked="False" 
                                  MinWidth="45" 
                                                             />
                </StackPanel>
            </Border>

            <Border 
                Grid.Row="2" 
                Height="25" 
                Background="White" 
                VerticalAlignment="Top">

                <TextBlock 
                    TextWrapping="Wrap" 
                    Text="Total value of selection" 
                    FontSize="16" 
                    FontFamily="{StaticResource MainFont}"
                    FontWeight="Bold"
                    Foreground="#FF06A2E5" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" />
            </Border>

            <TextBlock x:Name="filter_balance"  
                       TextWrapping="Wrap"   
                       Grid.Row="2" 
                       FontFamily="{StaticResource MainFont}"
                       FontWeight="Bold"
                       FontSize="16" 
                       Foreground="White" 
                       Margin="0,20,0,0" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" />

        </Grid>

    </Grid>

</Page>

