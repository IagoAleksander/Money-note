<Page
    x:Class="MoneyNote.NoteDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyNote"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background= "{StaticResource standardBrush}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" 
                   Text="{StaticResource AppName}" 
                   HorizontalAlignment="Center" 
                   Margin="0,39,0,0" 
                   FontSize="40" 
                   FontFamily="{StaticResource MainFont}"
                   FontWeight="Bold"/>

        <TextBlock HorizontalAlignment="Left" 
                   Margin="37,120,0,0" 
                   TextWrapping="Wrap" 
                   Text="- Details" 
                   VerticalAlignment="Top" 
                   FontSize="24" 
                   FontFamily="{StaticResource MainFont}"
                   FontWeight="Bold"/>

        <Border 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="345" 
            Width="325" 
            Margin="37,170,0,0" 
            BorderBrush="White" 
            BorderThickness="5">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="125"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Height="25" 
                            Background="White" 
                            VerticalAlignment="Top" 
                            Margin="0,-5,0,0">

                        <TextBlock
                			TextWrapping="Wrap"
                            Text="Date"
                			FontSize="16" 
                			FontFamily="{StaticResource MainFont}"
                            FontWeight="Bold"
                            Foreground="#FF06A2E5" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>

                    </Border>

                    <!--try to solve-->
                    <DatePicker x:Name="dp"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                FontFamily="{StaticResource MainFont}"
                                FontWeight="Bold" 
                                Margin="107,20,0,0"
                                HorizontalContentAlignment="Center" 
                                IsEnabled="False" />

                    <TimePicker x:Name="tp"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                FontFamily="{StaticResource MainFont}"
                                FontWeight="Bold" 
                                HorizontalContentAlignment="Center" 
                                ClockIdentifier="24HourClock" 
                                Margin="-107,20,0,0" 
                                IsEnabled="False"  />

                    <Border
                		Grid.Row="1" 
                		Height="25" 
                		Background="White" 
                        VerticalAlignment="Top">

                        <TextBlock 
                			Text="Description" 
                			FontSize="16" 
                			FontFamily="{StaticResource MainFont}"
                            FontWeight="Bold" 
                            Foreground="#FF06A2E5" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>

                    </Border>

                    <TextBlock x:Name="_2" 
                               TextWrapping="Wrap" 
                               Text='{Binding}' 
                               Grid.Row="1" 
                               FontFamily="{StaticResource MainFont}"
                               FontWeight="Bold" 
                               FontSize="16" 
                               Foreground="White" 
                               Margin="0,20,0,0" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" />

                    <Border 
                        Grid.Row="2" 
                		Height="25" 
                		Background="White" 
                        VerticalAlignment="Top">

                        <TextBlock 
                            TextWrapping="Wrap" 
                            Text="Value" 
                    		FontSize="16" 
                    		FontFamily="{StaticResource MainFont}"
                            FontWeight="Bold" 
                		    Foreground="#FF06A2E5" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />

                    </Border>

                    <TextBlock x:Name="_3" 
                               TextWrapping="Wrap" 
                               Text='{Binding}'  
                               Grid.Row="2" 
                               FontFamily="{StaticResource MainFont}"
                               FontWeight="Bold" 
                               FontSize="16" 
                               Foreground="White" 
                               Margin="0,20,0,0" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" />
                </Grid>
            
        </Border>

        <Button x:ConnectionId='1' x:Name="Edit" 
                Grid.Row="1" 
                Content="Edit" 
                HorizontalAlignment="Left" 
                Margin="20,0,0,0" 
                                  
                FontFamily="{StaticResource MainFont}"
                FontWeight="Bold" 
                VerticalAlignment="Top" 
                Padding="9.5,3.5" />
        
        <Button x:ConnectionId='2' x:Name="Delete" 
                Content="Delete" 
                Grid.Row="1" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,0" 
                                    
                FontFamily="{StaticResource MainFont}"
                FontWeight="Bold" 
                VerticalAlignment="Top" 
                Padding="9.5,3.5"/>
        
        <Button x:ConnectionId='3' x:Name="Cancel"
                Content="Cancel" 
                HorizontalAlignment="Right" 
                Margin="0,0,20,0" 
                Grid.Row="1" 
                                    
                FontFamily="{StaticResource MainFont}"
                FontWeight="Bold" 
                VerticalAlignment="Top" 
                Padding="9.5,3.5"/>


    </Grid>

</Page>

